<p id="notice"><%= notice %></p>

<h1>Snippets</h1>

<% if @snippets.empty? %>
  <h2>No Snippets yet</h2>
<% else %>
  <% @snippets.each do |snippet| %>
    <h4>
      <%= link_to snippet.name, snippet %> 
    </h4>
  <% end %>
<% end %>
