<h1>Snippets</h1>

<% if @snippets.empty? %>
  <h2>No Snippets yet</h2>
<% else %>
  <% @snippets.each do |snippet| %>
      <%= link_to(snippet) do %>
			  <%= snippet.name %>
			  <em>Created by: User @ 20:40</em>
			<% end %>
  <% end %>
<% end %>
<br>
<br>
<br>
<% if user_signed_in? %>
  <%= link_to 'Add a Snippet', new_snippet_path %>
<% end %>
