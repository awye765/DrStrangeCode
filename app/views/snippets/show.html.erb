<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @snippet.name %>
</p>

<p>
  <strong>Code:</strong>
  <%= raw @snippet.code %>
</p>

<% case %>
  <% when !current_user %>
  <% when User.ownsSnippet?(@snippet, current_user) %>
    <%= link_to 'Edit', edit_snippet_path(@snippet) %> |
    <%= link_to 'Delete', snippet_path(@snippet), method: :delete %> |
<% end %>
    <%= link_to 'Back', snippets_path %>
